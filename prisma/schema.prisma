generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Property {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Float
  currency    String   @default("USD")
  address     String?
  city        String?
  type        String   @default("APARTMENT") // APARTMENT, HOUSE, COMMERCIAL, LAND
  status      String   @default("DRAFT") // DRAFT, ACTIVE, UNDER_OFFER, SOLD
  
  images      String   @default("[]") // JSON string of image URLs
  features    String   @default("[]") // JSON string of features
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  leads       Lead[]
  metrics     PropertyMetric[]
}

model Lead {
  id         String   @id @default(uuid())
  name       String
  email      String?
  phone      String?
  message    String?
  status     String   @default("NEW") // NEW, CONTACTED, VIEWING, NEGOTIATION, CLOSED
  source     String   @default("WEBSITE")
  
  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id])
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PropertyMetric {
  id         String   @id @default(uuid())
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  
  views      Int      @default(0)
  contacts   Int      @default(0)
  shares     Int      @default(0)
  
  date       DateTime @default(now()) // Daily metrics
}
